<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:background="@color/lightgrey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.digital.wiggle.rn.buscor.Home"
    tools:showIn="@layout/app_bar_home">

    <ScrollView
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="145dp"
                    android:id="@+id/balance"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:background="#B0BEC5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="130dp">

                    <ImageView
                        android:src="@drawable/bus_ticket_icon"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:text="Buy ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:background="#B0BEC5"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="130dp">

                    <ImageView
                        android:src="@drawable/money"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:id="@+id/imageView2" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:text="Recharge account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:background="#B0BEC5"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:layout_height="130dp">

                    <ImageView
                        android:src="@drawable/folder_profile"
                        android:layout_width="56dp"
                        android:layout_height="56dp" />
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:text="Personal Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="160dp"
                    android:background="#B0BEC5"
                    android:layout_height="130dp">

                    <ImageView
                        android:src="@drawable/warning_icon"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:id="@+id/imageView3" />

                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:text="Report problem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_receipt_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Transactions History"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_record_voice_over_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Buscor community"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_add_alert_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:text="Notifications"
                    android:textColor="#EEEEEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="200dp"
                    android:text="4"
                    android:textColor="#EEEEEE"
                    android:layout_width="15dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_settings_voice_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Buscor Radio"
                        android:textColor="#EEEEEE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_settings_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:text="Preferences"
                        android:textColor="#EEEEEE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</RelativeLayout>
